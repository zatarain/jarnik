error(){
	>&2 printf '%b' "\033[31;1m[  ERROR  ]: $@\033[0m\n"
}

success(){
	>&2 printf '%b' "\033[32;1m[ SUCCESS ]: $@\033[0m\n"
}

warning(){
	>&2 printf '%b' "\033[33;1m[ WARNING ]: $@\033[0m\n"
}

info(){
	>&2 printf '%b' "\033[34;1m[  INFO   ]: $@\033[0m\n"
}

debug(){
	>&2 printf '%b' "\033[39;1m[  DEBUG  ]: $@\033[0m\n"
}

syntax(){
	>&2 echo "`grep --after=1 Syntax: "$0" | head -2`"
}

projectdir(){
	workingdir=`pwd`
	while [ `pwd` != '/' ]; do
		if [ -d .$jarnik ]; then
			pwd
			cd $workingdir
			return 0
		fi
		cd ..
	done

	error	"Current directory is not part of a Jarnik project."
	return 1
}

legodir(){
	if [ -d .$jarnik ]; then
		return 0
	fi
	workingdir=`pwd`
	while [ `pwd` != '/' ]; do
		if [ -d ../.$jarnik ]; then
			lego=$(basename `pwd`)
			if ! ( echo $lego | grep -Eq '^\.' ); then
				echo $lego
				cd $workingdir
			fi
			return 0
		fi
		cd ..
	done

	error	"Current directory is not part of a Jarnik project."
	return 1
}